@model Adrian.mvc.Models.TipoDeCentroDeCostoViewModel

@{
    Layout = "~/Views/Shared/_LayoutBackend.cshtml";
    ViewData["Title"] = "Tipos de Centro de Costo";
}


<!-- View -->
<div id="divView" class="row justify-content-center mt-4">
    <div class="col-lg-8 col-md-10 col-sm-12">
        <div class="card bg-white shadow rounded">
            <div class="card-body">
                <div class="row card-title mb-3">
                    <div class="col-10">
                        <h4>Tipos de Centro de Costo</h4>
                    </div>
                    <div tipo="btnContainer" class="col-2 me-0 text-end">
                        <i class="fas fa-plus-circle fa-2x pointer" tipo="btnAdd" mode="A" numeral="-1"></i>
                    </div>
                </div>
                <div class="list-group list-group-flush">
                    <div class="list-group-item list-group-item-action bg-dark text-white rounded">
                        <div class="row">
                            <div class="col-1">#</div>
                            <div class="col-9">Tipo</div>
                            <div class="col-2"></div>
                        </div>
                    </div>
                </div>
                <div id="divSpinner" class="m-3 p-3">
                    <center><h1><i class="fa fa-fw fa-spinner fa-pulse fa-fw"></i></h1></center>
                </div>
                <div tipo="btnContainer" class="list-group list-group-flush" id="divTipos" style="display:none"></div>
                <div class="jumbotron" id="divListaVacia" style="display:none;margin-bottom:0px">
                    <h4 class="text-center">No has registrado ningun Tipo de Centro de Costo</h4>
                    <p class="text-center lead mt-4 mb-0">Para registrar nuevos Tipos de Centros de Costo debes pulsar el boton <i class="fas fa-plus-circle"></i> ubicado en la esquina superior derecha.</p>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Edit -->
<div id="divEdit" class="row justify-content-center mt-4" style="display:none">
    <div class="col-lg-8 col-md-10 col-sm-12">
        <div class="card bg-white shadow rounded">
            <div class="card-body">
                <div class="row card-title">
                    <div class="col-12">
                        <h4 id="hTitulo"></h4>
                        <hr />
                    </div>
                </div>
                <form method="post" action="/TipoCentroDeCosto/SaveInfo" autocomplete="off" id="Formulario">
                    @Html.AntiForgeryToken()
                    @Html.Hidden("Numeral")
                    @Html.Hidden("Mode")

                    <div class="form-group">
                        <div class="row">
                            <div class="col-12">
                                <div class="mb-3">
                                    <label asp-for="Nombre" class="form-label"></label>
                                    <input asp-for="Nombre" tipo="Nombre" class="form-control" maxlength="100" autofocus />
                                    <span asp-validation-for="Nombre" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                    </div>
                    <hr />
                    <div class="row mt-3">
                        <div class="col-12 text-end">
                            <button type="button" class="btn btn-light" id="btnCancel">Cancelar</button>
                            <button type="button" class="btn btn-primary" id="btnSave">Guardar</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

<script src="~/lib/SweetAlert/sweetalert2.all.min.js" asp-append-version="true"></script>
<script src="~/js/Backend/TipoCentroDeCosto.min.js" asp-append-version="true"></script>
